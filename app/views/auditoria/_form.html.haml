= form_for @auditorium, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend
      = form_action_title
      Auditorium
    .control-group
      = f.label :auditorium_number, :class => 'control-label'
      .controls
        = f.number_field :auditorium_number, :class => 'number_field'
    .control-group
      = f.label :seats_number, :class => 'control-label'
      .controls
        = f.number_field :seats_number, :class => 'number_field'
    .control-group
      = f.label :building_number, :class => 'control-label'
      .controls
        = f.number_field :building_number, :class => 'number_field'
    .control-group
      = f.label :auditorium_type, :class => 'control-label'
      .controls
        = f.select :auditorium_type_id, options_from_collection_for_select(auditorium_types, :id, :name)
    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to 'Cancel', auditoria_path, :class => 'btn'
