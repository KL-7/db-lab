!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %title= content_for?(:title) ? yield(:title) : "DbApp"
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(name="description" content="")
    %meta(name="author" content="")
    = csrf_meta_tags
    = yield(:head)
    = stylesheet_link_tag "application", :media => "all"

    /[if lt IE 9]
      %script(src="http://html5shiv.googlecode.com/svn/trunk/html5.js")

    %link(rel="shortcut icon" href="images/favicon.ico")
    %link(rel="apple-touch-icon" href="images/apple-touch-icon.png")
    %link(rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png")
    %link(rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png")

  %body
    .container
      .row
        .span2
          .well.sidebar-nav
            %ul.nav.nav-list
              %li= link_to "Courses", courses_path
              %li= link_to "Subjects", subjects_path
              %li= link_to "Lectures", lectures_path
              %li= link_to "Lecturers", lecturers_path
              %li= link_to "Auditoria", auditoria_path
              %li= link_to "Auditorium Types", auditorium_types_path
              %hr
              %li= link_to "Queries", queries_path
        .span10
          = content_tag :h1, yield(:title) if show_title
          = yield

    = javascript_include_tag "application"
