= form_for @subject, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend
      = form_action_title
      Subject
    .control-group
      = f.label :name, :class => 'control-label'
      .controls
        = f.text_field :name, :class => 'text_field'
    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to 'Cancel', subjects_path, :class => 'btn'
